<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.agrawalgaurav.apps.sharedpreference.Home">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/balance_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Hello User,Your Balance is : " />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/logout" />

    <Button
        android:text="Transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/transfer"
        android:layout_below="@+id/amount"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="48dp"
        android:id="@+id/transferto"
        android:text="test2"
        android:layout_below="@+id/logout"
        android:layout_alignLeft="@+id/transfer"
        android:layout_alignStart="@+id/transfer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amount"
        android:layout_marginTop="33dp"
        android:text="10"
        android:layout_below="@+id/transferto"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="Transfer to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/transferto"
        android:layout_alignBottom="@+id/transferto"
        android:layout_toLeftOf="@+id/transferto"
        android:layout_toStartOf="@+id/transferto" />

    <TextView
        android:text="amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/amount"
        android:layout_alignBottom="@+id/amount"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SMS"
        android:layout_toRightOf="@+id/balance_view"
        android:layout_toEndOf="@+id/balance_view"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/list22" />

    <Button
        android:text="Sms Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/SMS"
        android:layout_below="@+id/transfer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
